{
  "name": "yamllint-ts",
  "version": "0.1.0",
  "description": "A TypeScript YAML linter with full feature parity to yamllint (Python)",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "yamllint-ts": "./dist/cli.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "src/conf"
  ],
  "scripts": {
    "build": "tsc && cp -r src/conf dist/",
    "dev": "tsc --watch",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "yaml",
    "lint",
    "linter",
    "yamllint",
    "validator",
    "checker"
  ],
  "author": "Jason Held",
  "license": "GPL-3.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/jasonheld/yamllint-ts"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^12.1.0",
    "ignore": "^5.3.1",
    "yaml": "^2.6.1"
  },
  "devDependencies": {
    "@types/node": "^20.17.10",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  }
}
